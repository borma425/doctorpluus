{% set facebook    =  site.theme.theme_mod('basic-footerPlus-callout-facebook') %}
{% set telegram    =  site.theme.theme_mod('basic-footerPlus-callout-telegram') %}
{% set linkedin    =  site.theme.theme_mod('basic-footerPlus-callout-linkedin') %}
{% set tiktok    =  site.theme.theme_mod('basic-footerPlus-callout-tiktok') %}
{% set youtube     =  site.theme.theme_mod('basic-footerPlus-callout-youtube') %}
{% set twitter     =  site.theme.theme_mod('basic-footerPlus-callout-twitter') %}
{% set instagram    =  site.theme.theme_mod('basic-footerPlus-callout-instagram') %}

    <!-- footer -->
    <footer class="main-bg p-3 text-white">
        <div class="container">
            <div class="footer d-flex justify-content-between align-items-center">
                <div class="footer-info">
                    <img src="{{ logo_100_x_100 }}" class="w-50" alt="footer-img">

                    <ul class="mt-3 d-flex flex-column gap-2 p-0">
                  {% for item in footer_menu.items %}
                        <li><a href="{{ item.link|e('esc_html') }}"> {{ item.title }} </a></li>
{% endfor %}

                    </ul>
                </div>


                <div class="footer-links ">
  {#                   <div class="badges d-flex flex-column gap-1">
                        <img src=" {{ fn('asset_url',"google-play-badge.jpg","/img/icons/") }}" class="w-100" alt="google-play-badge">
                        <img src="{{ fn('asset_url',"app-store-badge.jpg","/img/icons/") }}" class="w-100" alt="app-store-badge">
                    </div> #}

                    <div class="socail-media d-flex  align-content-center gap-4 mt-2">
    {% if facebook %}
        <a href="{{ facebook }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-facebook fs-2"></i>
        </a>
    {% endif %}

    {% if telegram %}
        <a href="{{ telegram }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-telegram fs-2"></i>
        </a>
    {% endif %}

    {% if linkedin %}
        <a href="{{ linkedin }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-linkedin fs-2"></i>
        </a>
    {% endif %}

    {% if tiktok %}
        <a href="{{ tiktok }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-tiktok fs-2"></i>
        </a>
    {% endif %}

    {% if youtube %}
        <a href="{{ youtube }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-youtube fs-2"></i>
        </a>
    {% endif %}

    {% if twitter %}
        <a href="{{ twitter }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-twitter fs-2"></i>
        </a>
    {% endif %}

    {% if instagram %}
        <a href="{{ instagram }}" target="_blank" rel="noopener noreferrer">
            <i class="fa-brands fa-instagram fs-2"></i>
        </a>
    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </footer>
