{% extends "base.twig" %}

{% block grid_content %}

<style>

/* Modern and Responsive CSS for WordPress articles within <main> */
main {
    --primary-color: #0073e6;
    --secondary-color: #005bb5;
    --text-color: #333;
    --border-radius: 12px;
    --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;

    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
   margin-top: 3rem;
    padding: 2rem;
    background-color: transparent; /* Transparent background */
    border-radius: var(--border-radius);

}

/* Headings */
main h1, main h2, main h3, main h4, main h5, main h6 {
    margin-top: 1.5em;
    margin-bottom: 0.75em;
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-color);
}

main h1 { font-size: clamp(1.5rem, 5vw, 2rem); }
main h2 { font-size: clamp(1.25rem, 4.5vw, 1.75rem); }
main h3 { font-size: clamp(1.1rem, 4vw, 1.5rem); }
main h4 { font-size: clamp(1rem, 3.5vw, 1.25rem); }
main h5 { font-size: clamp(0.9rem, 3vw, 1.1rem); }
main h6 { font-size: clamp(0.85rem, 2.5vw, 1rem); }

/* Paragraphs */
main p {
    margin-bottom: 1.5em;
    font-size: clamp(0.875rem, 2.5vw, 1rem); /* Smaller font size */
    line-height: 1.8;
}

/* Links */
main a {
    color: var(--primary-color);
    text-decoration: none;
    transition: var(--transition);
}

main a:hover {
    color: var(--secondary-color);
    text-decoration: underline;
}

/* Lists */
main ul, main ol {
    margin-bottom: 1.5em;
    padding-left: 1.5em;
}

main li {
    margin-bottom: 0.75em;
    font-size: clamp(0.875rem, 2.5vw, 1rem); /* Smaller font size */
}

/* Images */
main img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 1.5em 0;
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
}

/* Blockquotes */
main blockquote {
    margin: 1.5em 0;
    padding: 1.5em;
    border-left: 4px solid var(--primary-color);
    background: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
    backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    color: #555;
    font-style: italic;
    box-shadow: var(--box-shadow);
}

/* Code */
main code {
    font-family: "Courier New", Courier, monospace;
    background-color: rgba(245, 245, 245, 0.8); /* Semi-transparent background */
    padding: 0.2em 0.4em;
    border-radius: 6px;
    font-size: 0.9em;
}

main pre {
    background-color: rgba(245, 245, 245, 0.8); /* Semi-transparent background */
    padding: 1.5em;
    border-radius: var(--border-radius);
    overflow-x: auto;
    margin-bottom: 1.5em;
    box-shadow: var(--box-shadow);
}

main pre code {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
}

/* Tables */
main table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5em;
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
    overflow: hidden;
}

main th, main td {
    padding: 1em;
    border: 1px solid #ddd;
    text-align: left;
}

main th {
    background-color: rgba(249, 249, 249, 0.8); /* Semi-transparent background */
    font-weight: 700;
}

/* Buttons */
main .button, main button {
    display: inline-block;
    padding: 0.75em 1.5em;
    font-size: 1rem;
    color: #fff;
    background-color: var(--primary-color);
    border: none;
    border-radius: var(--border-radius);
    cursor: pointer;
    text-decoration: none;
    transition: var(--transition);
    box-shadow: var(--box-shadow);
}

main .button:hover, main button:hover {
    background-color: var(--secondary-color);
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

/* Forms */
main input, main textarea, main select {
    width: 100%;
    padding: 0.75em;
    margin-bottom: 1em;
    border: 1px solid #ddd;
    border-radius: var(--border-radius);
    font-size: 1rem;
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
    box-shadow: var(--box-shadow);
    transition: var(--transition);
}

main input:focus, main textarea:focus, main select:focus {
    border-color: var(--primary-color);
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 115, 230, 0.1);
}

main input[type="submit"] {
    background-color: var(--primary-color);
    color: #fff;
    border: none;
    cursor: pointer;
}

main input[type="submit"]:hover {
    background-color: var(--secondary-color);
    transform: translateY(-2px);
}

/* Responsive Design */
@media (max-width: 768px) {
    main {
        padding: 1.5rem;
    }

    main h1 { font-size: clamp(1.25rem, 6vw, 1.75rem); }
    main h2 { font-size: clamp(1.1rem, 5.5vw, 1.5rem); }
    main h3 { font-size: clamp(1rem, 5vw, 1.25rem); }
    main h4 { font-size: clamp(0.9rem, 4.5vw, 1.1rem); }
    main h5 { font-size: clamp(0.85rem, 4vw, 1rem); }
    main h6 { font-size: clamp(0.8rem, 3.5vw, 0.95rem); }

    main p, main li {
        font-size: clamp(0.8rem, 3vw, 0.9rem); /* Smaller font size */
    }
}/* Author Box */
.author-box {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent background */
    backdrop-filter: blur(10px);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
}

.author-avatar img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--primary-color);
}

.author-info {
    flex: 1;
}

.author-name {
    margin: 0 0 0.5rem 0;
    font-size: clamp(1.1rem, 3vw, 1.5rem);
    color: var(--text-color);
}

.author-bio {
    margin: 0 0 1rem 0;
    font-size: clamp(0.875rem, 2.5vw, 1rem);
    line-height: 1.6;
    color: #555;
}

.author-social {
    display: flex;
    gap: 1rem;
}

.author-social a {
    color: var(--primary-color);
    text-decoration: none;
    font-size: clamp(0.875rem, 2.5vw, 1rem);
    transition: var(--transition);
}

.author-social a:hover {
    color: var(--secondary-color);
    text-decoration: underline;
}

/* Responsive Design for Author Box */
@media (max-width: 768px) {
    .author-box {
        flex-direction: column;
        text-align: center;
    }

    .author-avatar img {
        width: 80px;
        height: 80px;
    }

    .author-social {
        justify-content: center;
    }
}

            .title-container {
                background-color: #f4f4f4;
                padding: 20px;
                border-radius: 8px;
                text-align: center;
                max-width: 800px;
                margin: 0 auto; /* Center the container */
            }

            .title-container h1 {
                color: #333;
                font-family: Arial, sans-serif;
                font-size: clamp(24px, 5vw, 36px); /* Responsive font size */
                margin: 0;
            }
</style>

